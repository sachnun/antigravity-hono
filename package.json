{
  "name": "antigravity-hono",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:web": "cd web && bun run dev",
    "build:web": "cd web && bun install && bun run build",
    "migrate": "wrangler d1 migrations apply antigravity-auth --remote",
    "deploy": "bun run build:web && bun run migrate && wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.5",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3",
    "wrangler": "^4.4.0"
  }
}
